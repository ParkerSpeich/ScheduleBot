files:
    "/etc/cron.d/mycron":
        mode: "000644"
        owner: root
        group: root
        content: |
            * * * * * root /usr/local/bin/myscript.sh

    "/usr/local/bin/myscript.sh":
        mode: "000755"
        owner: rootw
        group: root
        content: |
            #!/bin/bash
            /usr/bin/python36 /opt/python/current/app/worktext.py 2> /opt/python/log/worktest-error.log
            exit 0