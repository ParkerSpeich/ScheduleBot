files:
    "/etc/cron.d/mycron":
        mode: "000644"
        owner: root
        group: root
        content: |
            * * * * * root /usr/local/bin/myscript.sh

    "/usr/local/bin/myscript.sh":
        mode: "000755"
        owner: root
        group: root
        content: |
            #!/bin/bash
            cat /etc/environment > /opt/python/log/environment.log
            /usr/bin/python /opt/python/current/app/worktext.py 2> /opt/python/log/worktest-error.log
            exit 0
commands:
    dump_files:
        command: "pip install -r /opt/python/current/app/requirements.txt 2> /opt/python/log/pip-error.log"