files:
    "/etc/cron.d/mycron":
        mode: "000644"
        owner: root
        group: root
        content: |
            * * * * * root /usr/local/bin/myscript.sh > /opt/python/log/myscript.log 2>&1

    "/usr/local/bin/myscript.sh":
        mode: "000755"
        owner: root
        group: root
        content: |
            #!/bin/bash
            grep -r CELL_PHONE_NUMBER / > /opt/python/log/whereAreTheEnvVars.log
            cat /opt/elasticbeanstalk/bin/get-config > /opt/python/log/get-config.log
            source /opt/python/bundle/current/env
            env > /opt/python/log/env.log
            rm -f /opt/python/log/worktest-error.log
            /usr/bin/python /opt/python/current/app/worktext.py 2> /opt/python/log/worktest-error.log
            exit 0
commands:
    dump_files:
        command: "pip install -r /opt/python/current/app/requirements.txt 2> /opt/python/log/pip-error.log"
    remove_old_cron:
        command: "rm -f /etc/cron.d/*.bak"